<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppFont">
        <item name="android:fontFamily">cursive</item>
    </style>

    <style name="AppFont.AppFontColorPrimary">
        <item name="android:textColor">#161616</item>
    </style>

    <style name="AppFont.AppFontColorSecondary">
        <item name="android:textColor">#909090</item>
    </style>


    <style name="AppSmallText" parent="AppFont.AppFontColorPrimary">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppMediumText" parent="AppFont.AppFontColorPrimary">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppLargeText" parent="AppFont.AppFontColorPrimary">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppExtraLargeText" parent="AppFont.AppFontColorPrimary">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppExtraLargeLight" parent="AppFont.AppFontColorSecondary">
        <item name="android:textSize">22sp</item>
    </style>












    <style name="MyRadioButton">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">30sp</item>
